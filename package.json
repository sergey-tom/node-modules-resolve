{
  "name": "node-modules-resolve",
  "description": "Simply resolve path in your local node_modules folder",
  "keywords": [
    "node_modules",
    "path",
    "resolve"
  ],
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "cover": "nyc --reporter=lcov npm t",
    "watch:test": "npm t -- --watch",
    "test": "mocha src/index.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sneas/node-modules-resolve.git"
  },
  "author": "Dima Snisarenko <snisarenkodima@gmail.com>",
  "license": "MIT",
  "config": {
    "ghooks": {
      "pre-commit": "npm run test"
    },
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "callsite": "1.0.0"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "codecov": "1.0.1",
    "commitizen": "2.8.6",
    "cz-conventional-changelog": "1.2.0",
    "ghooks": "1.3.2",
    "mocha": "3.1.2",
    "nyc": "8.4.0"
  }
}
